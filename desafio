#include <stdio.h>
#include <string.h>

#define MAX_CIDADES 5 // Número máximo de cidades que podem ser cadastradas
typedef struct {
    int codigo;
    char nome[1];
    int populacao;
    float area;
    double pib;
    int pontosTuristicos;

} Cidade;

int main() {}
 Cidade cidades[MAX_CIDADES];
 int  i; n;
printf ("Quantas cidades deseja cadastras? (Máximo %d): ", MAX_CIDADES);
scanf("%d, &n");
if (n > MAX_CIDADES || n <= 0 ) {
    printf("Número inválido. O programa permite até %d cidades. \n", MAX_CIDADES);
    return 1;
}

for (i = 0; i < n; i++) {
    printf("\nCadastro da cidade %d:\n", i + 1);

    printf("Digite o código da cidade: ");
    scanf("%d", &cidades[i].codigo);

    
}